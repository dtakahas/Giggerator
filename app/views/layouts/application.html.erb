<!DOCTYPE html>
<html>
<head>
  <title>Giggerator</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="logo">
  <a href="/"><img src="/assets/giggerator_logo_transparent.png" /></a>
</div>

<% flash.each do |key, value| %>
	<div class='flash' id='<%=key %>'>
		<%= value %>
	</div>
<% end %>

<div id="main">
<%= yield %>
</div>

</body>
</html>
